<Window x:Class="CourseProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Курсовой проект Батырханова Армана" Height="550" Width="500">
    <Grid Height="500" VerticalAlignment="Top">
        <ListBox Name="LabList" HorizontalAlignment="Center" Height="475" Width="250"
                 Margin="0,20,0,0">
            <ListBoxItem Content="Лабораторная №1" Tag="1" HorizontalAlignment="Center"/>
            <ListBoxItem Content="Лабораторная №2" Tag="2" HorizontalAlignment="Center"/>
            <ListBoxItem Content="Лабораторная №3" Tag="3" HorizontalAlignment="Center"/>
            <ListBoxItem Content="Лабораторная №4" Tag="4" HorizontalAlignment="Center"/>
            <ListBoxItem Content="Лабораторная №5" Tag="5" HorizontalAlignment="Center"/>
        </ListBox>
        <Button Content="Открыть" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                Margin="0,0,0,10" Click="OpenLab"/>
    </Grid>
</Window>
